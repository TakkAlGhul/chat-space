.contents
  = render partial: "chat-side/chat-side"
  .chat-main
    .main-header
      .current-group
        %h2.current-group__name  fff
        %ul.member-list
          Member :  
          %li.member-list__member tak
      =link_to '#' do 
        .main-header__edit-btn Edit
    .messages
      .message
        .upper-info
          %p.upper-info__user  tak
          %p.upper-info__date  2019/00/00(sun) 00:00:00
        %p.message__text hello
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :body, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'image', class: 'icon'
            = f.file_field :image, class: 'hidden'
          = f.submit "Send", class: 'form__submit'


