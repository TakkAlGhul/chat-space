.contents
  = render partial: "chat-side/chat-side"
  .chat-main
    .main-header
      .current-group
        %h2.current-group__name  fff
        %ul.member-list
          Member :  
          %li.member-list__member tak
      =link_to '#' do 
        .main-header__edit-btn Edit
    .messages
      .message
        .upper-info
          %p.upper-info__user  tak
          %p.upper-info__date  2019/00/00(sun) 00:00:00
        %p.message__text hello
    .form
      %form#new_message.new-message{enctype: "multipart/form-data", action:  "#", accept_charset: "UTF-8", method: "post"}
        %input{name: "utf8", type: "hidden", value: "âœ“"}
        %input{type: "hidden", name: "authenticity_token", value: ""}
        .input-box
          %input#message_content.input-box__text{placeholder: "type a message", type: "text", name: "message[content]"}
          %label.image-label{for: "message_image"}
            %i.fa.fa-image
              %input#message_image.image-label__input{type: "file", name: "message[image]"}
        %input.new-message__submit-btn{type: "submit", name: "commit", value: "Send", data: {"disable-with": "Send"}}


